<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#f7f6f6"
    android:fillViewport="true">
        	
    <LinearLayout
        android:id="@+id/fundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingTop="40dp"
        android:paddingRight="50dp"
        android:paddingBottom="40dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >
        
        <EditText
		    android:id="@+id/edNome"
		    android:background="#ebedea"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/heigth_editext"
            android:textSize="@dimen/fontes_para_textos"
            android:layout_marginLeft="@dimen/margem_editext"
            android:padding="@dimen/padding"
			android:hint="@string/nome"
			android:layout_marginBottom="10dp" />                
        
        <EditText
		    android:id="@+id/edFone"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="phone"
			android:hint="@string/telefone"/>   
			
       <EditText
		    android:id="@+id/edEndereco"
		    android:background="#ebeaea"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="textPostalAddress"
			android:hint="@string/endereco"/>
		
       <EditText
		    android:id="@+id/edNumero"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="textPhonetic"
			android:hint="@string/numero"/>
       
       <EditText
		    android:id="@+id/edCep"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="textPostalAddress"
			android:hint="@string/cep"/>
       
       <EditText
		    android:id="@+id/chbBairro"
		    android:background="#ebeaea"
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:hint="@string/bairro"/>
	</LinearLayout>           
	
</ScrollView>