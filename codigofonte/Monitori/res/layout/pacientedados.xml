<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#f7f6f6"
    android:fillViewport="true">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cadastrar_paciente"
        android:id="@+id/text_cadastrar"
        android:textColor="#000000"
        android:textSize="@dimen/cadastrarpaciente"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        />   	
    <LinearLayout
        android:id="@+id/fundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingTop="40dp"
        android:paddingRight="50dp"
        android:paddingBottom="40dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical" >
        
        <ImageView 
    		android:id="@+id/foto"
   			android:layout_width="100dp"
    		android:layout_height="100dp"
    		android:layout_gravity="center_horizontal"
   			android:src="@drawable/ic_no_image"
    		android:contentDescription="@string/foto"/>
        
        <EditText
		    android:id="@+id/edNome"
		    android:background="#ebedea"
		    android:layout_width="370dp"
		    android:layout_height="@dimen/heigth_editext"
            android:textSize="@dimen/fontes_para_textos"
            android:layout_marginLeft="@dimen/margem_editext"
            android:padding="@dimen/padding"
			android:hint="@string/nome"
			android:layout_marginBottom="10dp" />
        
        <EditText
		    android:id="@+id/edDataNascimento"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="date"
			android:hint="@string/dtNascimento"/>
        
        <Button 
            android:text="Button" 
            android:id="@+id/btDataNascimento"
			android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp" 
			 />
        
        <EditText
		    android:id="@+id/edTefone"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="phone"
			android:hint="@string/telefone"/>
		   
       <EditText
		    android:id="@+id/edCelular"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="phone"
			android:hint="@string/celular"/>   
			
       <EditText
		    android:id="@+id/edEndereco"
		    android:background="#ebeaea"
		    android:layout_width="370dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="textPostalAddress"
			android:hint="@string/endereco"/>
		
       <EditText
		    android:id="@+id/edCep"
		    android:background="#ebeaea"
		    android:layout_width="180dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:inputType="textPostalAddress"
			android:hint="@string/cep"/>
       
       <EditText
		    android:id="@+id/chbBairro"
		    android:background="#ebeaea"
		    android:layout_width="370dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:hint="@string/bairro"/>
		
       <TextView
		    android:id="@+id/tvSexo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			android:text="@string/sexo"
            android:layout_marginLeft="@dimen/margem_editext"
            android:textSize="@dimen/fontes_para_textos"
            android:layout_marginBottom="10dp" />	         
        
        <RadioGroup
 			android:id="@+id/radioSex"
 			android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:orientation="horizontal"
 			android:layout_marginLeft="@dimen/margem_editext"
 			android:layout_marginBottom="10dp">l
		    
         <RadioButton
 			android:id="@+id/rbMasc"
		 	android:layout_width="wrap_content"
 			android:layout_height="wrap_content"
 			android:text="@string/masculino"
 			android:checked="true" />

         <RadioButton
			 android:id = "@+id/rbFeminino"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:text="@string/feminino" />

     	</RadioGroup>
     	
        <TextView
		    android:id="@+id/tvHipertensao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="@dimen/margem_editext"
            android:textSize="@dimen/fontes_para_textos"
            android:layout_marginBottom="10dp"
			android:text="@string/hipertenso"/>
		
        
		<CheckBox
		    android:id="@+id/chbHipertenso"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margem_editext"
			android:layout_marginBottom="15dp"
			android:text="@string/hipertenso"
			/>
		
		<TextView
		    android:id="@+id/tvDiabetes"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="@dimen/margem_editext"
            android:textSize="@dimen/fontes_para_textos"
            android:layout_marginBottom="10dp"
			android:text="@string/diabetes"/>
		
		
		<CheckBox
		    android:id="@+id/chbTipo1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:text="@string/tipo1"/>
		
		<CheckBox
		    android:id="@+id/chbTipo2"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:paddingLeft="5dp"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:text="@string/tipo2"/>
		
        <EditText
		    android:id="@+id/chbUnidadeSaude"
		    android:background="#ebeaea"
		    android:layout_width="370dp"
		    android:layout_height="@dimen/heigth_editext"
			android:layout_marginLeft="@dimen/margem_editext"
			android:padding="@dimen/padding"
			android:textSize="@dimen/fontes_para_textos"
			android:layout_marginBottom="10dp"
			android:hint="@string/unidadeSaude"/>
		
        <Button
		    android:id="@+id/sbSalvar"
		    android:layout_width="@dimen/bt_width"
		    android:layout_height="@dimen/bt_heigth"
		    android:background="#000000"
		    android:text="@string/salvar"
		    android:textColor="#ffffff"
		    android:layout_marginBottom="10dp"
		    android:layout_gravity="center_horizontal"/>
		
    </LinearLayout>    
    
       

		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
        
		
		
        
	</LinearLayout>
</ScrollView>
