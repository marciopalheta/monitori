<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:background="#efeaea"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    >
        
    <TextView         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diagnosticar"
        android:id="@+id/tvDiagnosticar"
        android:textColor="#555858"
        android:textSize="@dimen/fontes_para_textos"
        
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"/>
    
 	<EditText
 	    android:id="@+id/edDiagnosticar"
 	    android:layout_width="match_parent"
 	    android:layout_height="388dp"
 	    android:layout_marginBottom="15dp"
 	    android:ems="10"
 	    android:gravity="top"
 	    android:hint="@string/diagnosticar"
 	    android:inputType="textMultiLine"
 	    android:paddingBottom="20dp"
 	    android:paddingLeft="30dp"
 	    android:paddingRight="50dp"
 	    android:paddingTop="20dp" >

 	    <requestFocus />
 	</EditText>
 	
 	<TextView 
         android:id="@+id/dataDiagnostico"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:textSize="@dimen/fontes_para_textos"
         android:text="@string/data_diagnostico"
         android:textColor="#a39e9e"
         android:paddingRight="10dp"/>
     <TextView 
         android:id="@+id/horaDiagnostico"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:textSize="@dimen/fontes_para_textos"
         android:text="@string/data_diagnostico"
         android:textColor="#a39e9e"
         android:paddingRight="10dp"/>
      
</LinearLayout>
